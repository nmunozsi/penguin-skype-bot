{
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 6
    },

    "env": {
        "node": true
    },

    "globals": {
        "Promise": true
    },

    "rules": {
        "no-undef": 2,
        "object-curly-spacing": [2, "always"],
        "max-len": [2, 100],
        "comma-dangle": [2, "never"],
        "space-before-function-paren": [2, {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "ignore"
        }]
    }
}
